@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "Product Dashboard";
}

<h1>Product Dashboard</h1>
<form asp-action="ProductDashboard">
    Title: <input type="text" name="title"/> <input type="submit" value="Search" />
</form>
<br />

<table class="table">
    <tbody>
    <tr>
        @foreach (var item in Model) {
            <td style="border: 1px solid cyan;">
                <img src="/@item.ProductPhoto" width="100" height="100" /> <br />
               <!--@Html.DisplayFor(modelItem => item.ProductPhoto)-->
                @Html.DisplayFor(modelItem => item.Title) <br />
                Price: NRs. @Html.DisplayFor(modelItem => item.Price) <br />
                @Html.DisplayFor(modelItem => item.Category.Name)
                <a asp-action="Details" asp-rioute-id="@item.Id">Details</a> 
            </td>
        }
    </tr>
    </tbody>
</table>
